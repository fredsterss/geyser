{
  "manifest_version": 2,

  "name": "Geyser",
  "description": "Versioning for noPSD designers.",
  "version": "0.1",
  "browser_action": {
    "default_icon": "assets/sandwich-128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "pageCapture"
  ],
  "content_security_policy": "script-src 'self' https://*.firebaseio.com https://*.firebase.com; object-src 'self'"
}